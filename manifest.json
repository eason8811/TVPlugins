{
  "manifest_version": 2,
  "name": "我的浏览器插件",
  "version": "1.0",
  "description": "这是一个示例插件。",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img.png",
      "48": "img.png",
      "128": "img.png"
    }
  },
  "icons": {
    "16": "img.png",
    "48": "img.png",
    "128": "img.png"
  }
}
